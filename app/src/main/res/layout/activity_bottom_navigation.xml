<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bottomNavigation">

    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:mbn_backgroundBottomColor="@color/white"
        app:mbn_circleColor="@color/white"
        app:mbn_countBackgroundColor="@color/prjtred"
        app:mbn_countTextColor="@color/prjtred"
        app:mbn_defaultIconColor="@color/prjtred"
        app:mbn_rippleColor="@color/prjtred"
        app:mbn_selectedIconColor="@color/prjtred"
        app:mbn_shadowColor="#1f212121"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>